datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Category {
    id       Int       @id @default(autoincrement())
    name     String    @unique
    products Product[]
}

model Product {
    id           Int    @id @default(autoincrement())
    nome         String
    descricao    String
    categoryId   Int
    imagem       String
    preco        String
    material     String
    departamento String
    name         String

    category Category @relation(fields: [categoryId], references: [id])
}
